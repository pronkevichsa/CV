<Window x:Class="PicturesRenaming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PicturesRenaming"
        mc:Ignorable="d"
        Title="MainWindow" Height="736.676" Width="986.408">
    <Grid Margin="0,0,2,0" OpacityMask="#FF1A343C" Height="690" VerticalAlignment="Top">
        <Image x:Name="image1" HorizontalAlignment="Left" Height="350" Margin="595,217,0,0" VerticalAlignment="Top" Width="350" ClipToBounds="True" SnapsToDevicePixels="True" Stretch="Fill">
            <Image.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF615E5E" Offset="1"/>
                </LinearGradientBrush>
            </Image.OpacityMask>
            <Image.Effect>
                <DropShadowEffect/>
            </Image.Effect>


        </Image>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="874,132,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" IsEnabled="False"/>
        <TextBox x:Name="loadText" HorizontalAlignment="Left" Height="22" Margin="595,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="247" IsEnabled="False"/>
        <TreeView x:Name="treeView1" HorizontalAlignment="Left" Height="332" Margin="43,36,0,0" VerticalAlignment="Top" Width="248"/>
        <ListView x:Name="listView1"  HorizontalAlignment="Left" Height="332" Margin="313,36,0,0" VerticalAlignment="Top" Width="262" SelectionChanged="listView1_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox  x:Name="TextBox1" HorizontalAlignment="Left" Height="57" Margin="595,623,0,0" TextWrapping="Wrap" Text="Coordinates" VerticalAlignment="Top" Width="229"/>
        <Button x:Name="BtnSortDate" Content="Sort By Date" HorizontalAlignment="Left" Margin="313,387,0,0" VerticalAlignment="Top" Width="75" Click="BtnSortDate_Click"/>
        <CheckBox x:Name="AddDateToFoto"    Content="Add Date to Foto" HorizontalAlignment="Left" Margin="595,36,0,0" VerticalAlignment="Top" Width="194" Checked="AddDateToFoto_Checked" Unchecked="AddDateToFoto_Unchecked" Visibility="Hidden"/>
        <RadioButton x:Name="RBtn1"  GroupName="SelectPicture"  Content="Add Date To All Foto" HorizontalAlignment="Left" Margin="606,72,0,0" VerticalAlignment="Top" IsChecked="True" IsEnabled="False" Checked="RBtn1_Checked" Visibility="Hidden"/>
        <RadioButton x:Name="Rbtn2"    GroupName="SelectPicture"  Content="Add Date To Selected Foto" HorizontalAlignment="Left" Margin="606,102,0,0" VerticalAlignment="Top" IsEnabled="False" Visibility="Hidden"/>
        <Button x:Name="BtnRename"   Content="Rename By Date" HorizontalAlignment="Left" Margin="432,387,0,0" VerticalAlignment="Top" Width="125" RenderTransformOrigin="0.92,0.85" Click="BtnRename_Click" Visibility="Hidden"/>
        <Label x:Name="Label1"   Content="" HorizontalAlignment="Left" Margin="595,159,0,0" VerticalAlignment="Top" Width="247"/>
        <Button x:Name="BtnMap" Content="Map" HorizontalAlignment="Left" Margin="874,169,0,0" VerticalAlignment="Top" Width="75" Click="BtnMap_Click"/>

    </Grid>
</Window>
